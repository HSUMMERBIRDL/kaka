<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorLightGray"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_spec_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/select_rec_white_gray"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_size_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大6寸"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_size_a"
                android:layout_marginTop="10dp"
                android:text="15.2 * 11.4cm"/>

            <ImageView
                android:id="@+id/img_arrow_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/more_1x"
                android:layout_alignParentRight="true"/>


            <TextView
                android:id="@+id/txt_unit_price_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/img_arrow_a"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="@color/color_orange"
                android:text="$ 1.5 / 张"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_spec_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/select_rec_white_gray"
            android:layout_marginTop="1dp"
            android:padding="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_size_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7寸"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_size_b"
                android:layout_marginTop="10dp"
                android:text="18.1 * 15.4cm"/>

            <ImageView
                android:id="@+id/img_arrow_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/more_1x"
                android:layout_alignParentRight="true"/>


            <TextView
                android:id="@+id/txt_unit_price_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/img_arrow_b"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="@color/color_orange"
                android:text="$ 2.5 / 张"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/ll_spec_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/select_rec_white_gray"
            android:layout_marginTop="1dp"
            android:padding="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_size_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="九寸"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_size_c"
                android:layout_marginTop="10dp"
                android:text="25.2 * 19.5cm"/>

            <ImageView
                android:id="@+id/img_arrow_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/more_1x"
                android:layout_alignParentRight="true"/>


            <TextView
                android:id="@+id/txt_unit_price_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/img_arrow_c"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="@color/color_orange"
                android:text="$ 4.5 / 张"/>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>