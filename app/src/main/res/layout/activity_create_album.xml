<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ll_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_form"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/blue"
                android:gravity="center"
                android:padding="15dp"
                android:text="风格"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/txt_photo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/blue"
                android:gravity="center"
                android:padding="15dp"
                android:text="照片"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txt_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/blue"
                android:gravity="center"
                android:padding="15dp"
                android:text="样式"
                android:textColor="@color/white" />

            <TextView

                android:id="@+id/txt_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/blue"
                android:gravity="center"
                android:padding="15dp"
                android:text="背景"
                android:textColor="@color/white" />

        </LinearLayout>


        <!--    <LinearLayout
                android:id="@+id/ll_list_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/ll_tab"
                android:orientation="horizontal">-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_container"
            android:layout_above="@id/ll_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/rv_container"
            android:gravity="center">



            <ImageView
                android:id="@+id/img_page_photo"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@color/blue"/>


        </LinearLayout>

     <!--   <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:text="相册"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_above="@id/rv_container"/>-->


    </RelativeLayout>

</RelativeLayout>